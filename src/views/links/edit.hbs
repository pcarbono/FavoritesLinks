<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/edit/{{link.id}}" method="POST">
                        <div class="form-group">
                            <input type ="text" value="{{link.title}}" class="form-control mt-2 mb-2"  name="title" placeholder="Title" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="url" value="{{link.url}}" name="url" class="form-control mt-2 mb-2"" placeholder="hhtp://">
                        </div>
                        <div class="form-group">
                            <textarea name="description" row="2" class="form-control mt-2 mb-2"" placeholder="Descripcion"> {{link.description}}</textarea>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Save
                            </button>
                        </div>
                        </div>   
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>